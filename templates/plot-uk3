set terminal pngcairo dashed font "Helvetica,12" size 800,600
set output "../graphs/covid-uk-all.png"
set logscale y
set key at -1,30 box
#set key at -22,100
set yrange [3:4500]
set xrange [-40:]
set ylabel "COVID19 cases per million inhabitants"
set xlabel "Days (from DATE March 2020)"
offset = (OFFSET + 5.5)
set mxtics
set grid mxtics xtics ytics mytics
ukpop = 67.7
frpop = 65.2
depop = 83.7
itpop = 60.5
supop = 8.6
espop = 46.7
nopop = 5.4
lompop = 10
atpop = 9.0
sepop = 9.1
lonpop = 8.9
nwpop = 7.2
epop = 6.2
swpop = 5.6
nepop = 8.1
midpop = 10.7
nipop = 1.8
scpop = 5.3
wapop = 3.0

lonoff = 19
scoff = 21.5
waoff = 19.5
nioff = 23
roeoff = 23.5
lomoff = 5.5
plot "../country_data/lombardy" using ($0 +10.5 - offset):($2/lompop) w l lw 2 lc "black" t "Lombardy Region, Italy",\
"../country_data/italy" using ($0 +5 - offset):($2/itpop) w l lc "#a0a0a0" lw 2 t "All of Italy", \
"../uk-data/uk-regions-cum" using ($0 +13.5 -lonoff - offset):($3/lonpop) w l lw 2 lc "red" t sprintf("London (18 days behind Lombardy)",lonoff), \
"../uk-data/uk-regions-cum" using ($0 +13.5 -waoff - offset):($12/wapop) w l lw 2 lc "#00b000" t sprintf("Wales (%d days behind Italy)", waoff - lomoff), \
"../uk-data/uk-regions-cum" using ($0 +13.5 -scoff - offset):($11/scpop) w l lw 2 lc "blue" t sprintf("Scotland (%d days beind Italy)", scoff - lomoff), \
"../uk-data/uk-regions-cum" using ($0 +13.5 -nioff - offset):($10/nipop) w l lw 2 lc "brown" t sprintf("Northern Ireland (%d days behind Italy)", nioff - lomoff), \
"../uk-data/uk-regions-cum" using ($0 +13.5 -roeoff - offset):(($2+$4+$5+$6+$7+$8)/(epop+midpop+nepop+nwpop+sepop+swpop)) w l lw 2 lc "magenta" t sprintf("Rest of England (%d days behind Italy)", roeoff - lomoff), \
1.35**(x+offset - 4) lc "black"  dt 4 t "35% daily increase",\
1.22**(x+offset + 2) lc "black" dashtype 2 t "22% daily increase"

